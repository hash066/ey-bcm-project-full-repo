# Database configurations
DATABASE_URL=postgresql+psycopg2://username:password@host:port/database
GROK_API_KEY=your_groq_api_key_here

USE_SQLITE=False
SQLITE_PATH=./sqlite_db.db

# PostgreSQL/Supabase Configuration (fallback)
SQLALCHEMY_DATABASE_URI=postgresql://username:password@host:port/database
POSTGRES_SERVER=your_postgres_server
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password

# MongoDB configurations
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_DB=business_resilience

# Active Directory Configuration
AD_SERVER_URI=ldap://your_ad_server:389
AD_BASE_DN=dc=your,dc=domain
AD_BIND_USER=your_ad_user
AD_BIND_PASSWORD=your_ad_password

# Admin Credentials
admin_user=your_admin_user
admin_password=your_admin_password

# AD Admin Credentials (for LDAP binding)
AD_ADMIN_USER=your_ad_admin_user
AD_ADMIN_PASSWORD=your_ad_admin_password

# LLM API Keys
GROQ_API_KEY=your_groq_api_key_here

# Security
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API settings
API_V1_STR=/api/v1
PROJECT_NAME=Business Resilience Tool

# Supabase Storage
SUPABASE_URL=https://your_supabase_url.supabase.com
SUPABASE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=your_storage_bucket

# Password Management
PASSWORD_MASTER_KEY=your_password_master_key